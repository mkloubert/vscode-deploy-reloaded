// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },

    "deploy.reloaded": {
        "packages": [
            {
                "name": "Embedded CSS",
                "files": [
                    "/_res/css/*.css"
                ],

                "targets": [ "Embedded_CSS" ]
            },
            {
                "name": "Embedded HTML",
                "files": [
                    "/_res/html/*.html"
                ],

                "targets": [ "Embedded_HTML" ]
            },
            {
                "name": "Embedded JavaScript",
                "files": [
                    "/_res/javascript/*.js"
                ],

                "targets": [ "Embedded_JS" ]
            }
        ],

        "targets": [
            {
                "name": "Embedded_CSS",
    
                "type": "script",
                "script": "./.deploy/embedded_resources.js",
                "options": "css"
            },
            {
                "name": "Embedded_HTML",
    
                "type": "script",
                "script": "./.deploy/embedded_resources.js",
                "options": "html"
            },
            {
                "name": "Embedded_JS",
    
                "type": "script",
                "script": "./.deploy/embedded_resources.js",
                "options": "js"
            }
        ]
    },

    "kanban": {
        "openOnStartup": true
    }
}